<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">

    <title>Administrador</title>

    <!-- Custom fonts for this template-->
    <link href="/js/sbadmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/js/sbadmin/css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        a {
            color: black;
        }
    </style>

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav sidebar sidebar-dark accordion" style="background-color:#292929" id="accordionSidebar">
            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-paw"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Mapet</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item">
                <a class="nav-link" href="/modulos">
                    <i class="fas fa-fw fa-border-all"></i>
                    <span>Módulos</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/agenda/listar">
                    <i class="fas fa-fw fa-calendar"></i>
                    <span>Agenda</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/historico/listar">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>Históricos</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/perfil">
                    <i class="fas fa-fw fa-user"></i>
                    <span>Perfil</span>
                </a>
            </li>
        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Begin Page Content -->
                <div class="container-fluid" style="padding-right: 0px; padding-left: 0px;">

                    <!-- Page Heading -->
                    <nav class="navbar navbar-light bg-white" style="padding-bottom: 0px;padding-top: 0px;height: 80px; margin-bottom: 1%;">
                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800 pt-3">Registro de Pets</h1>
                        </div>
                        <a href="/animais/cadastrar"><button id="btn-cancelar" class="btn btn-primary btn-md" style=" float:right;margin-right: 2%;">Voltar</button></a>
                    </nav>
                    <section class="page-content">
                        <div class="container">
                            <div class="col-md-12">
                                <div id="div-table-content" class="card show  mb-1">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col-md-3" style="padding-left:12px">
                                                <div class="d-flex form-group">
                                                    <h6 style="font-weight: bold;padding-right:10px">Nome:</h6>
                                                    <label>
                                                        <%= dados.nome %>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="d-flex form-group">
                                                    <h6 style="font-weight: bold;padding-right:10px">Espécie:</h6>
                                                    <label>
                                                        <%= dados.nome_especie %>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group d-flex">
                                                    <h6 style="font-weight: bold; padding-right:10px">Data de Nascimento:</h6>
                                                    <label>
                                                        <%= dados.data_nasc %>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <form action="/animais/salvar_cadastro" name="form" method="POST" role="form">
                                                    <div class="col-md-12 pr-2">
                                                        <div class="form-group">
                                                            <label>
                                                                Dono
                                                            </label>
                                                            <select name="id_dono" class="form-control" required>
                                                                <option value=''>Selecionar</option>
                                                                <% for(var i = 0; i < dadosCliente.length; i++) { %>
                                                                <option value="<%=dadosCliente[i].id_dono%>"><%=dadosCliente[i].nome%> - CPF: <%=dadosCliente[i].cpf%></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 pr-2">
                                                        <div class="form-group">
                                                            <label>
                                                                Raça
                                                            </label>
                                                            <select name="nome_raca" class="form-control" required>
                                                                <option value=''>Selecionar</option>
                                                                <% for(var i = 0; i < dadosRaca.length; i++) { %>
                                                                <option value="<%=dadosRaca[i].nome_raca%>"><%=dadosRaca[i].nome_raca%></option>
                                                                <% } %>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary mt-1" style="margin-left:12px">Registrar</button>

                                                    <input type="hidden" name="nome" value="<%=dados.nome%>">
                                                    <input type="hidden" name="nome_especie" value="<%=dados.nome_especie%>">
                                                    <input type="hidden" name="data_nasc" value="<%=dados.data_nasc%>">
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="/js/sbadmin/vendor/jquery/jquery.min.js"></script>
    <script src="/js/sbadmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/js/sbadmin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sbadmin/js/sb-admin-2.min.js"></script>
    <script src="/js/Personalizados/validacao.js"></script>

</body>

</html>
